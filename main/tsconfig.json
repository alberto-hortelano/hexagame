{
	"compilerOptions": {
		"outDir": "./dist/",
		"baseUrl": "./",
		"paths": {
			"core/*": [
				"src/common/core/*"
			],
			"lib/*": [
				"src/common/lib/*"
			],
			"components/*": [
				"src/client/react/components/*"
			]
		},
		"sourceMap": true,
		"module": "commonjs",
		"target": "ES2018",
		"jsx": "react",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*",
	]
}